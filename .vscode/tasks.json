{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build bitarray tests",
      "type": "shell",
      "command": "cmake",
      "dependsOn": ["CMake Configure", "Build target bitarray tests"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "build bitarray benchmarks",
      "type": "shell",
      "command": "cmake",
      "dependsOn": ["CMake Configure", "Build target bitarray benchmarks"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "CMake Configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DBUILD_TESTS=ON",
        "-DBUILD_BENCHMARKS=ON",
        "-S",
        ".",
        "-B",
        "./build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build target bitarray tests",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "./build", "--target", "ecl_BA_RS_tests"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build target bitarray benchmarks",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "./build", "--target", "ecl_RS_benchmarks"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
